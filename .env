# FauxDB Docker Environment Configuration
# Copy this file to .env and modify as needed

# PostgreSQL Configuration
POSTGRES_USER=fauxdb
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=fauxdb_prod

# FauxDB Server Configuration
FAUXDB_HOST=0.0.0.0
FAUXDB_PORT=27018
FAUXDB_MAX_CONNECTIONS=1000
FAUXDB_WORKER_THREADS=4

# Logging Configuration
RUST_LOG=info
RUST_BACKTRACE=0

# Security Configuration
FAUXDB_ENABLE_SSL=false
FAUXDB_ENABLE_AUTH=false

# SSL Configuration (if enabled)
FAUXDB_SSL_CERT_PATH=/app/certs/server.crt
FAUXDB_SSL_KEY_PATH=/app/certs/server.key
FAUXDB_SSL_CA_PATH=/app/certs/ca.crt

# Authentication Configuration (if enabled)
FAUXDB_AUTH_METHOD=SCRAM-SHA-256
FAUXDB_SESSION_TIMEOUT_MINUTES=30

# Monitoring Configuration
GRAFANA_PASSWORD=admin123

# Scaling Configuration
FAUXDB_REPLICAS=1

# Database Connection Pool
FAUXDB_POOL_MIN_SIZE=5
FAUXDB_POOL_MAX_SIZE=20
FAUXDB_POOL_TIMEOUT_SECONDS=30

# Performance Tuning
FAUXDB_CACHE_SIZE_MB=256
FAUXDB_BATCH_SIZE=1000
FAUXDB_MAX_QUERY_TIME_MS=30000

# Development vs Production
NODE_ENV=production
